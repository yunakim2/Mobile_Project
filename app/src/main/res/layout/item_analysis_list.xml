<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:paddingVertical="10dp"
    android:id="@+id/imgRecyclerIcon"
    android:background="@drawable/item_recycler_bg_pink"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:id="@+id/imgEmoji"
        app:layout_constraintBottom_toTopOf="@id/tvRecyclerTitle"
        android:src="@drawable/happy_pink"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/tvRecyclerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2020년 9월"
        android:textSize="15sp"
        android:includeFontPadding="false"
        android:fontFamily="@font/notosanskr_bold"
        android:textColor="@color/colorWhite"
        android:layout_marginLeft="20dp"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 감정 분석 결과"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        android:includeFontPadding="false"
        android:fontFamily="@font/notosanskr_medium"
        app:layout_constraintTop_toTopOf="@id/tvRecyclerTitle"
        app:layout_constraintLeft_toRightOf="@id/tvRecyclerTitle"
        app:layout_constraintBottom_toBottomOf="@id/tvRecyclerTitle"/>


</androidx.constraintlayout.widget.ConstraintLayout>